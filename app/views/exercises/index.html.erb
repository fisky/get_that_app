  <h1>Exercises</h1>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th >ID</th>
      <th >name</th>
      <th >url(after www.youtube.com/)</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%=exercise.id%></td>
	      <td><%=exercise.name.upcase%></td>
        <td><%=exercise.url%></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to "New exercise", new_exercise_path,class: "btn btn-lg btn-default"  %>
  <%= link_to "Back", root_url,class: "btn btn-lg btn-default"  %>



